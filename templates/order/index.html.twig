{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
<div class="row mt-3">
  <div class="col-1">
  </div>
  <div class="col-10">
    <div class="card border-secondary">
      <div class="card-header text-center">
        Orders
      </div>
      <div class="card-body">
        <div class="row">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Amount</th>
                <th scope="col">Currency</th>
                <th scope="col">Delivred To</th>
                <th scope="col">Order Number</th>
                <th scope="col">Address</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              {% for order in orders %}
              <tr>
                <th scope="row">{{loop.index}}</th>
                <td>{{order.amount}}</td>
                <td>{{order.currency}}</td>
                <td>{{order.deliverTo.accountName}}</td>
                <td>{{order.orderNumber}}</td>
                <td>{{order.deliverTo.addressLine1}}</td>
                <td>
                  <a type="button" class="btn btn-info text-white"
                    href="{{path('app_order_details',{orderId : order.id})}}">
                    Check out
                  </a>
                </td>
              </tr>
              {% endfor %}

            </tbody>
          </table>
          {% include '_partials/_pagination.html.twig' %}
        </div>
        <button class="btn btn-success text-white mt-3" data-bs-toggle="modal" data-bs-target="#saveToCsvModal">
          Save to csv
        </button>
      </div>
    </div>
    <div class="col-1">
    </div>
  </div>
  {% include '_partials/_save_to_csv.html.twig' %}
  {% endblock %}