{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="row mt-3">
  <div class="col-1">
  </div>
  <div class="col-10">
    <div class="card border-secondary">
      <div class="card-header text-center">
        Entities
      </div>
      <div class="card-body">
        <div class="row mt-5">
          <div class="col-3">
            <div class="card text-dark bg-info mb-3" style="max-width: 18rem;">
              <div class="card-header">Entity 1</div>
              <div class="card-body">
                <h5 class="card-title">Contact</h5>
                <p class="card-text">This entity will represent a contact model.</p>
              </div>
            </div>

          </div>
          <div class="col-3">
            <div class="card text-dark bg-warning mb-3" style="max-width: 18rem;">
              <div class="card-header">Entity 2</div>
              <div class="card-body">
                <h5 class="card-title">Order</h5>
                <p class="card-text">This entity will represent an order model.</p>
              </div>
            </div>
          </div>
          <div class="col-3">
            <div class="card text-dark bg-danger mb-3" style="max-width: 18rem;">
              <div class="card-header">Entity 3</div>
              <div class="card-body">
                <h5 class="card-title">SalesOrderLine</h5>
                <p class="card-text">This entity will represent an order line model.</p>
              </div>
            </div>
          </div>
          <div class="col-3">
            <div class="card text-dark bg-primary mb-3" style="max-width: 18rem;">
              <div class="card-header">Entity 4</div>
              <div class="card-body">
                <h5 class="card-title">Article</h5>
                <p class="card-text">This entity will represent an article model.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-1">
  </div>
</div>
{% endblock %}