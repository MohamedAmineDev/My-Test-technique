{% if pages > 0 %}
<div class="mt-3">
<nav aria-label="Page navigation example">
  <ul class="pagination">
   {% if currentPage - 1 < 1 %}
    <li class="page-item"><button class="page-link" disabled="true">Previous</button></li>
    {% endif %}
    {% if currentPage - 1 > 0 %}
    <li class="page-item"><a class="page-link" href="{{path(path,{page: currentPage - 1 })}}">Previous</a></li>
    {% endif %}
    {% for p in 1..pages %}
    {% if currentPage == p %}
    <li class="page-item active"><a class="page-link" href="{{path(path,{page: p })}}">{{p}}</a></li>
{% endif %}
 {% if currentPage != p %}
    <li class="page-item"><a class="page-link" href="{{path(path,{page: p })}}">{{p}}</a></li>
{% endif %}
{% endfor %}

    {% if currentPage + 1 > pages %}
    <li class="page-item"><button class="page-link" disabled="true">Next</button></li>
    {% else %}
    <li class="page-item"><a class="page-link" href="{{path(path,{page: currentPage + 1 })}}">Next</a></li>
    {% endif %}
  </ul>
</nav>
</div>
{% endif %}