{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
<div class="row mt-3" >
<div class="col-1" >
</div>
<div class="col-10" >
<div class="card border-secondary">
  <div class="card-header text-center">
    Articles
  </div>
  <div class="card-body">
<div class="row">
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Description</th>
      <th scope="col">Unit</th>
      <th scope="col">Code</th>
      <th scope="col">Price</th>
      <th scope="col">Vat Percentage (%)</th>
    </tr>
  </thead>
  <tbody>
  {% for article in articles %}
        <tr>
      <th scope="row">{{loop.index}}</th>
      <td>{{article.articleDescription}}</td>
      <td>{{article.unitDescription}}</td>
      <td>{{article.unitCode}}</td>
      <td>{{article.unitPrice}}</td>
      <td>{{article.vatPercentage}}</td>
    </tr>
    {% endfor %}
    
  </tbody>
</table>
{% include '_partials/_pagination.html.twig' %}
</div>

</div>
</div>
<div class="col-1" >
</div>
</div>
{% endblock %}

